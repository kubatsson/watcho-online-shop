@{
}


@{
    Layout = null;
}
@model e_comm.ViewModels.Payment.PaymentFirstVM

<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <link href="../css/HomePage/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <script src="../js/HomePage/jquery.min.js"></script>

    <link href="../css/HomePage/style.css" rel="stylesheet" type="text/css" media="all" />

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>


    <link href="../css/HomePage/memenu.css" rel="stylesheet" type="text/css" media="all" />



</head>
<body>
    <!--header-->
    <div class="header">
        <div class="header-top">
            <div class="container">

                <div class="header-left">
                    <ul>
                        
                     
                        
                            <li><a asp-controller="Login" asp-action="Logout">Log out</a></li>

                       
                    </ul>

                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="container">
            <div class="head-top">
                <div class="logo">
                    <a href="index.html"><img src="../images/HomePage/logo.png" alt=""></a>
                </div>
                <div class=" h_menu4">
                    <ul class="memenu skyblue">
                        <li class="active grid"><a class="color8" href="index.html">Home</a></li>
                        <li><a class="color1" asp-controller="HomePage" asp-action="ProductListing" asp-route-GenderId="1" asp-route-logged="True">Men</a></li>

                        <li class="grid">
                            <a class="color1" asp-controller="HomePage" asp-action="ProductListing" asp-route-GenderId="2" asp-route-logged="True">	Women</a>
                        </li>


                        <li><a asp-action="BrandListing" asp-route-logged="True" class="color1">Brands</a></li>

                        <li><a class="color1" asp-action="ContactUs" asp-route-logged="True">Get in touch</a></li>
                    </ul>
                </div>
                <a></a>
                <div class="clearfix"> </div>
            </div>
        </div>

    </div>

    <div class="special-content">
    
        <div class="special-subcontent1">
            <h1> Billing details</h1>
            <div class="special-subcontent1-form">
                <form asp-controller="Payment" asp-action="PaymentOption">
                    <input type="text" asp-for="@Model.CustomerInfo.FullName" placeholder="Full name" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Name';}">
                    <br />

                    <input type="text" asp-for="@Model.CustomerInfo.Email" placeholder="Email" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Email';}">
                    <br />
                    <input type="text" asp-for="@Model.CustomerInfo.PhoneNumber" placeholder="Phone number" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Subject';}">
                    <br />
                    <input type="text" asp-for="@Model.CustomerInfo.StreetAddress" placeholder="Street address" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Message';}">

                    <input type="text" asp-for="@Model.CustomerInfo.Zip" placeholder="Zip" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Message';}">
                    <input type="text" style="display:none;" asp-for="@Model.ProductName" placeholder="Zip" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Message';}">
                    <input type="text" style="display:none;" asp-for="@Model.Price" placeholder="Zip" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Message';}">



                    <input type="text" asp-for="@Model.CustomerInfo.City" placeholder="City" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Message';}">
                    <select asp-for="@Model.CustomerInfo.Country">
                        <option>Bosnia and Herzegovina</option>
                        <option>Croatia</option>
                        <option>Serbia</option>
                        <option>Slovenia</option>
                        <option>USA</option>
                        <option>Canada</option>

                    </select>


                    <button class="special-subcontent1-button" type="submit">Checkout</button>

                </form>
            </div>
        </div>

        <div class="special-subcontent2">
            <div class="special-subcontent2-details">

                <h2>Product name: @Model.ProductName</h2>
                <h2>Description: @Model.ShortDescription</h2>
                <h2>Price: @Model.Price$</h2>
                <div class="special-subcontent2-image"><img src="@Model.ImageRoute"/></div>

                


            </div>
            
            



        </div>
        

        

    </div>

    <!--content-->
    <div id="special2" class="content">

        <div class="footer">
            <div class="container">
                <div class="footer-top-at">

                    <div class="col-md-4 amet-sed">
                        <h4>MORE INFO</h4>
                        <ul class="nav-bottom">
                            <li><a href="contact.html">Mans</a></li>
                            <li><a href="#">Womans</a></li>                            
                            <li><a href="#">Home</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 amet-sed ">
                        <h4>CONTACT US</h4>

                        <p>
                            Say hello whenever you want!
                        </p>
                        <p class="special3">Send an email to: eklinika22@outlook.com <i class="fas fa-at"></i></p>


                        <p>Phone number: +38762 244 806 <i class="fas fa-phone-square"></i></p>

                    </div>
                    <div class="col-md-4 amet-sed">
                        <h4>Newsletter</h4>
                        <p>
                            Sign Up to get all news update
                            and promo
                        </p>
                        <form>
                            <input type="text" value="" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                            <input type="submit" value="Sign up">
                        </form>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>


