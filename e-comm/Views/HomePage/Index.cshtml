                        <p><a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[1].Id">Buy now</a></p>
                    </div>
                    <div class="col-md-4 grid-top">
                        <a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[2].Id" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@Model.Rows[2].Route" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left    b-delay03 ">
                                    <span>55% OFF</span>
