                        <p><a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[3].Id">Buy now</a></p>
                    </div>
                    <div class="col-md-4 grid-top">
                        <a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[4].Id" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@Model.Rows[4].Route" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left    b-delay03 ">
                                    <span>20% OFF</span>
                                </h3>
                            </div>
                        </a>
                        <p><a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[4].Id">Buy now</a></p>
                    </div>
                    <div class="col-md-4 grid-top">
                        <a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[5].Id" class="b-link-stripe b-animate-go  thickbox">
                            <img class="img-responsive" src="@Model.Rows[5].Route" alt="">
                            <div class="b-wrapper">
                                <h3 class="b-animate b-from-left    b-delay03 ">
                                    <span>20% OFF</span>
                                </h3>
                            </div>
                        </a>
                        <p><a asp-controller="Payment" asp-action="Index" asp-route-ProductId="@Model.Rows[5].Id">Buy now</a></p>
                    </div>
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
        </div>

        <div class="footer">
            <div class="container">
                <div class="footer-top-at">

                    <div class="col-md-4 amet-sed">
                        <h4>MORE INFO</h4>
                        <ul class="nav-bottom">
                            <li><a asp-controller="HomePage" asp-action="ProductListing" asp-route-GenderId="1">Mans</a></li>
                            <li><a asp-controller="HomePage" asp-action="ProductListing" asp-route-GenderId="2">Womans</a></li>
                            <li><a asp-action="Index">Home</a></li>
                        </ul>
