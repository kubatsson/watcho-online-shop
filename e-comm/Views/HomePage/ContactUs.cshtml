

@{
    Layout = null;
}
@model e_comm.ViewModels.HomePage.ContactUsVM

<!DOCTYPE html>
<html>
<head>
    <title>Home Page</title>
    <link href="../css/HomePage/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <script src="../js/HomePage/jquery.min.js"></script>

    <link href="../css/HomePage/style.css" rel="stylesheet" type="text/css" media="all" />

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>


    <link href="../css/HomePage/memenu.css" rel="stylesheet" type="text/css" media="all" />



</head>
<body>
    <!--header-->
    <div class="header">
        <div class="header-top">
            <div class="container">
               
                <div class="header-left">
                    <ul>
                        @if (Model.logged == false)
                        {
                            <li><a asp-controller="Login" asp-action="Index">Login</a></li>
                            <li><a asp-controller="Registration" asp-action="Index">Register</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Login" asp-action="Logout">Log out</a></li>

                        }
                    </ul>

                    <div class="clearfix"> </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="container">
            <div class="head-top">
                <div class="logo">
                    <a href="index.html"><img src="../images/HomePage/logo.png" alt=""></a>
                </div>
                <div class=" h_menu4">
                    <ul class="memenu skyblue">
                        <li class="active grid"><a class="color8" href="index.html">Home</a></li>
                        <li><a class="color1" asp-controller="HomePage" asp-action="ProductListing" asp-route-GenderId="1" asp-route-logged="@Model.logged">Men</a></li>

                        <li class="grid">
                            <a class="color1" asp-controller="HomePage" asp-action="ProductListing" asp-route-GenderId="2" asp-route-logged="@Model.logged">	Women</a>
                        </li>


                        <li><a asp-action="BrandListing" asp-route-logged="@Model.logged" class="color1">Brands</a></li>

                        <li><a class="color1" asp-action="ContactUs" asp-route-logged="@Model.logged">Get in touch</a></li>
                    </ul>
                </div>
                <a></a>
                <div class="clearfix"> </div>
            </div>
        </div>

    </div>

    <div class="contact">

        <div class="container">
            <h1>Contact</h1>
            <div class="contact-form">

                <div class="col-md-8 contact-grid">
                    <form asp-action="ContactUsSend">
                        <input type="text" placeholder="Name" asp-for="Name" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Name';}">

                        <input type="text" placeholder="Email" asp-for="Email" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Email';}">
                        <input type="text"  placeholder="Subject" asp-for="Subject" value="Subject" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Subject';}">
                        <input type="text" placeholder="Message" asp-for="Message" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='Message';}">
                        
                        <div class="send">
                            <input type="submit" value="Send">
                        </div>
                    </form>
                </div>


            </div>

        </div>

    </div>

        <!--content-->
        <div id="special2" class="content">

            <div class="footer">
                <div class="container">
                    <div class="footer-top-at">

                        <div class="col-md-4 amet-sed">
                            <h4>MORE INFO</h4>
                            <ul class="nav-bottom">
                                <li><a href="contact.html">Mans</a></li>
                                <li><a href="#">Womans</a></li>                               
                                <li><a href="#">Home</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4 amet-sed ">
                            <h4>CONTACT US</h4>

                            <p>
                                Say hello whenever you want!
                            </p>
                            <p class="special3">Send an email to: eklinika22@outlook.com <i class="fas fa-at"></i></p>


                            <p>Phone number: +38762 244 806 <i class="fas fa-phone-square"></i></p>

                        </div>
                        <div class="col-md-4 amet-sed">
                            <h4>Newsletter</h4>
                            <p>
                                Sign Up to get all news update
                                and promo
                            </p>
                            <form>
                                <input type="text" value="" onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}">
                                <input type="submit" value="Sign up">
                            </form>
                        </div>
                        <div class="clearfix"> </div>
                    </div>
                </div>

            </div>
            </div>
</body>
</html>


